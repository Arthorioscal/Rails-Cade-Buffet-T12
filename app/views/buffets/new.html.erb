<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center my-4">Cadastro de Buffet</h1>

      <% if @buffet.errors.any? %>
        <div class="alert alert-danger">
          <h2>Erro ao cadastrar fornecedor</h2>
          <ul>
            <% @buffet.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render 'form' %>
    </div>
  </div>
</div>