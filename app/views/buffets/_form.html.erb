<%= form_with model: @buffet do |f|%>
    <div>
        <%= f.label :brand_name %>
        <%= f.text_field :brand_name %>
    </div>
    <div>
        <%= f.label :corporate_name %>
        <%= f.text_field :corporate_name %>
    </div>
    <div>
        <%= f.label :cnpj %>
        <%= f.text_field :cnpj %>
    </div>
    <div>
        <%= f.label :phone %>
        <%= f.text_field :phone %>
    </div>
    <div>
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>
    <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </div>
    <div>
        <%= f.label :neighborhood %>
        <%= f.text_field :neighborhood %>
    </div>
    <div>
        <%= f.label :state %>
        <%= f.text_field :state %>
    </div>
    <div>
        <%= f.label :city %>
        <%= f.text_field :city %>
    </div>
    <div>
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <div>
        <%= f.label :payment_methods %>
        <%= f.text_field :payment_methods %>
    </div>

    <div>
        <%= f.label :cover_photo, 'Adicione uma foto para a exibição de seu Buffet' %>
        <%= f.file_field :cover_photo %>
    </div>

    <div>
        <%= f.submit 'Cadastrar' %>
    </div>
<% end %>