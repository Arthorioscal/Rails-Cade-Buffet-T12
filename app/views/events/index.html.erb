<h1> Eventos Cadastrados </h1>
<% if current_user.buffet.events.present? %>
  <% @events.each do |event| %>
    <h2> <%= event.name %> </h2>
    <p> <%= event.description %> </p>
    <p> <%= event.min_people %> </p>
    <p> <%= event.max_people %> </p>
    <p> <%= event.duration %> </p>
    <p> <%= event.menu %> </p>
    <p> <%= t("activerecord.attributes.event.alcohol_values.#{event.alcohol}") %> </p>
    <p> <%= t("activerecord.attributes.event.decoration_values.#{event.decoration}") %> </p>
    <p> <%= t("activerecord.attributes.event.parking_service_values.#{event.parking_service}") %> </p>
    <p> <%= t("activerecord.attributes.event.at_buffet_location_values.#{event.at_buffet_location}") %> </p>
    <%= link_to 'Editar', edit_event_path(event) %>
  <% end %>
<% else %>
  <%= link_to 'Cadastrar Evento', new_event_path %>
<% end %>