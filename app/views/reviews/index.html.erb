<div class="container mt-4">
  <h1 class="mb-4">Avaliações do Buffet:</h1>
  <% @reviews.each do |review| %>
    <div class="card mb-3">
      <div class="card-header">
        <h2 class="mb-0">Usuário: <%= review.user.name %></h2>
      </div>
      <div class="card-body">
        <h5 class="card-title">Nota: <%= review.rating %></h5>
        <p class="card-text">Comentário: <%= review.comment %></p>
      </div>
    </div>
  <% end %>
</div>