<div class="container">
  <h1 class="my-4">Cadastre o preço do evento</h1>
  <h3 class="my-4">Não coloque use pontos, letras ou símbolos ao cadastrar os preços. Ex: ""."", "R$"</h3>
  <% if @event_price.errors.any? %>
    <div class="alert alert-danger">
      <h2>Erro ao cadastrar fornecedor</h2>
      <ul>
        <% @event_price.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'form', event_price: @event_price %>

  <%= link_to 'Voltar', buffet_profile_path(@event.buffet.id), class: 'btn btn-secondary mt-3' %>
</div>