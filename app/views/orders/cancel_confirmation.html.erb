<div class="container">
    <% if @order.event.partial_cancellation_fine.present? %>
        <h2 class="my-4">Você tem certeza que deseja cancelar esse pedido?</h2>
        <% if @cancellation_fee.present?%>
            <div class="alert alert-warning">
                <h3>Valor da Multa: <%= number_to_currency(@cancellation_fee) %></h3>
            </div>
        <% else %>
            <div class="alert alert-info">
                <h3>As regras de multa não se aplicam a você.</h3>
            </div>
        <% end %>
        <%= button_to 'Cancelar Pedido', cancel_order_path(@order, cancellation_fee: @cancellation_fee), method: :patch, class: 'btn btn-danger' %>
    <% else %>
        <div class="alert alert-info">
            <h3>O pedido não possui multa ou o prazo para ser taxado excede.</h3>
        </div>
    <% end %>
    <%= link_to 'Voltar', order_path(@order), class: 'btn btn-secondary mt-3' %>
</div>
