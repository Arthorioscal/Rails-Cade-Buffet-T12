<%= form_with model: @order, class: 'needs-validation', novalidate: true do |f| %>

    <div class="form-group">
        <%= f.label :event_date, class: 'form-label' %>
        <%= f.date_field :event_date, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
        <%= f.label :estimated_guests, class: 'form-label' %>
        <%= f.number_field :estimated_guests, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
        <%= f.label :details, class: 'form-label' %>
        <%= f.text_area :details, class: 'form-control', required: true %>
    </div>

    <% if @event.at_buffet_location %>
        <div class="form-group">
            <%= f.label :event_address, class: 'form-label' %>
            <%= f.text_field :event_address, class: 'form-control', required: true %>
        </div>
    <% end %>

    <%= f.hidden_field :event_id, value: @event.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :buffet_id, value: @event.buffet.id %>

    <%= f.submit 'Enviar Pedido', class: 'btn btn-primary' %>
<% end %>