<%= form_with model: [@event, @promotion] do |form| %>
    <div class="mb-3">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', required: true %>
    </div>
    
    <div class="mb-3">
        <%= form.label :start_date %>
        <%= form.date_field :start_date %>
    </div>

    <div class="mb-3">
        <%= form.label :end_date %>
        <%= form.date_field :end_date %>
    </div>

    <div class="mb-3">
        <%= form.label :weekday_discount %>
        <%= form.number_field :weekday_discount, step: 0.01 %>
    </div>

    <div class="mb-3">
        <%= form.label :weekend_discount %>
        <%= form.number_field :weekend_discount, step: 0.01 %>
    </div>

    <%= form.hidden_field :event_id, value: @event.id %>

    <div class="mb-3">
        <%= form.submit 'Criar Promoção', class: 'btn btn-primary' %>
    </div>
<% end %>